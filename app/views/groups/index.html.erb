<h1> Groups </h1>
<%= link_to "New Group", new_group_path, :class => "btn btn-primary" %>
<% @groups.each do |f| %>
	<div class="group-block">
	<p style="font-size: 20px"><strong>
	<%= link_to f.title, group_path(f) %>
	</strong><% if current_user && f.editable_by?(current_user)%>(<%= link_to "edit", edit_group_path(f) %> | <%= link_to "Delete", group_path(f) , method: :delete, :confirm => "Are you sure?" %>)</p><% end %>
	<p><%= f.description %></p>
	</div>
<% end %>

